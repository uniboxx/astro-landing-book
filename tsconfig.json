{
  "extends": "astro/tsconfigs/strict",
  "include": ["**/*.astro", ".astro/types.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@images/*": ["assets/images/*"]
    }
  }
}
